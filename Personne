public abstract class Personne {
    protected String nom;
    protected Coordonnees position;
    protected Boolean vie;   // True = Vivant, False = Mort

    // Constructeur 1 : Création (Début du jeu)
    public Personne(String nom) {
        this.nom = nom;
        x = 0;
        y = 0;
        this.vie = true;
    }
    // Getter
    public String getNom() {
            return nom;
        }
    public Coordonnee getPosition() {
            return position;
        }
    // Setter
    public void setNom(String nom) { this.nom = nom; }

    public void setPosition(int x, int y) {
    setX(x);
    setY(y);
    }

    // MÉTHODE DE DÉPLACEMENT
    // 1: Gauche | 2: Droite | 3: Bas | 4: Haut
    public void seDeplacer(int choix) {

        if (choix == 1) {      // GAUCHE
            this.x = this.x - 1;
        } else if (choix == 2) { // DROITE
            this.x = this.x + 1;
        } else if (choix == 3) { // BAS
            this.y = this.y + 1;
        } else if (choix == 4) { // HAUT
            this.y = this.y - 1;
        }
        System.out.println(this.nom + " se déplace vers " + getNomDirection(choixDirection) + " -> Case [" + x + "," + y + "]");
    }

    public abstract void attaquer(); 
}
